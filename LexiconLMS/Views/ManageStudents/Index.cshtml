﻿@model IEnumerable<LexiconLMS.Models.ApplicationUser>
@{
    ViewBag.Title = "Elever";
}
<h2>@ViewBag.Title</h2>
@*<p>
        @Html.ActionLink("Lägg till", "Register", "Account")
    </p>*@
<div>
    @using (Html.BeginForm("Index", "ManageStudents", FormMethod.Get))
    {
        <div class="row">
            <div class="col-lg-4">
                <p class="breadcrumb">
                    <br />
                    @*@Html.DropDownList("Alternative")*@
                    @Html.TextBox("SearchString")
                    <input type="submit" value="Sök" />
                </p>
            </div>
        </div>
    }
</div>

<table class="table table-hover sortable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)@*@Html.DisplayNameFor(model => model.UserName)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
        </tr>
    </thead>
@foreach (var item in Model)
{
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>

            <td>
                @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
            </td>
        </tr>
    </tbody>
}

</table>
